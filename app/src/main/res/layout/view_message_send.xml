<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sendMessage"
    >

    <TextView
        android:id="@+id/channelNameSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_blue"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="This is my message"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewSent"
        app:layout_constraintTop_toTopOf="@+id/imageViewSent"
        />

    <ImageView
        android:id="@+id/imageViewSent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/isa_avatar"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="16dp"
        />

    <TextView
        android:id="@+id/timeMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="hh:mm"
        android:textAlignment="viewEnd"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/channelNameSent"
        app:layout_constraintStart_toStartOf="@+id/channelNameSent"
        app:layout_constraintTop_toBottomOf="@+id/channelNameSent" />


</androidx.constraintlayout.widget.ConstraintLayout>