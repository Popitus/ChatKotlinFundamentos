<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/receiveMessage">

    <TextView
        android:id="@+id/channelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="This is your message"
        android:padding="16dp"
        android:maxWidth="240dp"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        android:background="@drawable/rounded_green"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jose_avatar"
        />

    <TextView
        android:id="@+id/timeMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="hh:mm"
        app:layout_constraintEnd_toEndOf="@+id/channelName"
        app:layout_constraintStart_toStartOf="@+id/channelName"
        app:layout_constraintTop_toBottomOf="@+id/channelName" />



</androidx.constraintlayout.widget.ConstraintLayout>